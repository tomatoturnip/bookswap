<div class="large-centered large-8 columns">
  <h3 align="center">Books</h3><br><br>
  <table align="center">
    <thead>
        <th>Title</th>
        <th>Author</th>
        <th>I Own This Book</th>
    </thead>

    <tbody>
      <% @books.sort! {|a, b| b.created_at <=> a.created_at }.each do |book| %>
      <%# @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td class="text-center">
          <%= simple_form_for([book, LendBook.new]) do |f| %>
            <%= f.button :submit, "Add", class: 'button tiny round' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


