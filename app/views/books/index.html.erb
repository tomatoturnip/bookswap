<div class="large-centered large-8 columns">
  <h3>Books</h3>
  <table>
    <thead>
        <th>Title</th>
        <th>Author</th>
        <th>I Own This Book</th>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td class="text-center">
          <%= simple_form_for([book, LendBook.new]) do |f| %>
            <%= f.button :submit, "Add" %>
          <% end %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>


