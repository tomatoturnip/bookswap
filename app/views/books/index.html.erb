<h1>All Books</h1>

<table>
  <thead>
      <th>Title</th>
      <th>Author</th>
      <th>Action</th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td>
        <%= simple_form_for([book, LendBook.new]) do |f| %>
          <%= f.button :submit, "Add to Lender List" %>
        <% end %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>

